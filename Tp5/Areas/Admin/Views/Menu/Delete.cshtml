@model ListMenuViewModel
@{
    ViewData["Title"] = @Resource.DeleteMenuTitle;
}

<div class="row">
    <div class="offset-md-1 offset-lg-2 col-md-10 col-lg-8">
        <div class="page-title">
            <h2> <i class="far fa-list-alt"></i> @Resource.DeleteMenuTitle</h2>
        </div>

        <div class="form-section">
            <h5>@Resource.DeleteMenuQuestion</h5>
            <hr />
        </div>
        <div class="row">
             <div class = "col-md-5 d-none d-md-block">
            @{
                string path = Model.Menu.ImagePath;
            }
            <img src="~/img/@path" alt="Food">
        </div>   
        </div>
        <div class="row details-row">
            <div class="col-sm-6">@Html.DisplayNameFor(model => model.Menu.nom) : </div>
            <div class="col-sm-6">@Html.DisplayFor(model => model.Menu.nom)</div>
        </div>
        <form asp-action="Delete">
            <input type="submit" value=@Resource.ButtonDelete class="btn btn-danger" />
        </form>

        <div class="links">
            <a asp-action="List">@Resource.ButtonReturnToList</a>
        </div>
    </div>

</div>