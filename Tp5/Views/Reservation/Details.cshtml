@model DetailsViewModel
@{

    ViewData["Title"] = Resource.ReservationDetailsTitle;
}

<div>
    <div class="row">
        <div class="page-title">
            <h2>@Resource.ReservationDetailsTitle</h2>
        </div>
    </div>
    <div class="row">
        <div class = "col-md-8 d-none d-md-block">
            @{
                string path = Model.Menu.ImagePath;
            }
            <img src="~/img/@path" alt="Good">
        </div>                  
        <div class="col-md-7">
            <div class="page-title">
                <h2>@Resource.ReservationCompleted</h2>
            </div>

            <div class="row details-row">
                <div class="col-sm-6">@Html.DisplayNameFor(model => model.Reservation.Nom) : </div>
                <div class="col-sm-6">@Html.DisplayFor(model => model.Reservation.Nom)</div>
            </div>
            <div class="row details-row">
                <div class="col-sm-6">@Html.DisplayNameFor(model => model.Reservation.Courriel) : </div>
                <div class="col-sm-6">@Html.DisplayFor(model => model.Reservation.Courriel)</div>
            </div>
            <div class="row details-row">
                <div class="col-sm-6">@Html.DisplayNameFor(model => model.Reservation.NbPersonne) : </div>
                <div class="col-sm-6">@Html.DisplayFor(model => model.Reservation.NbPersonne)</div>
            </div>
            <div class="row details-row">
                <div class="col-sm-6">@Html.DisplayNameFor(model => model.Reservation.Date) : </div>
                <div class="col-sm-6">@Html.DisplayFor(model => model.Reservation.Date)</div>
            </div>
            <div class="row details-row">
                <div class="col-sm-6">@Html.DisplayNameFor(model => model.Reservation.MenuChoiceId) : </div>
                <div class="col-sm-6">@Html.DisplayFor(model => model.Reservation.MenuChoiceId)</div>
            </div>
            <div class="text-center">
               @Resource.ThanksMessage1
               @Resource.ThanksMessage2
            </div>
            <div class="text-center">
                @Resource.Team
            </div>
            <div class="links">
                <a asp-controller="Home" asp-action="Index">@Resource.ButtonReturnHome</a>
            </div>
        </div>
    </div>>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
